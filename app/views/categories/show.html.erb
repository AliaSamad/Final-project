<h1><%= @category.name %></h1>
<p><%= @category.description %></p>

<h2 class="mt-4">ToDos in this Category</h2>
<% if @category.todos.any? %>
  <ul class="list-group">
    <% @category.todos.each do |todo| %>
      <li class="list-group-item">
        <%= link_to todo.title, todo_path(todo) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No ToDos yet in this category.</p>
<% end %>

<div class="mt-3">
  <%= link_to "Edit Category", edit_category_path(@category), class: "btn btn-warning me-2" %>
  <%= button_to "Delete Category",
                category_path(@category),
                method: :delete,
                data: { confirm: "Delete this category and ALL its ToDos?" },
                class: "btn btn-danger" %>
  <%= link_to "Back to Categories", categories_path, class: "btn btn-secondary ms-2" %>
</div>
