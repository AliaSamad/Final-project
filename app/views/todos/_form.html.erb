<%= form_with model: todo, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :category, "Category" %>
    <%= f.select :category,
          options_for_select(
            [
              ["Academic", "Academic"],
              ["Work",     "Work"],
              ["Personal", "Personal"]
            ],
            todo.category
          ),
          { prompt: "Select a category" },
          { class: "form-select" } %>
  </div>

  <div class="form-check mb-3">
    <%= f.check_box :priority, class: "form-check-input" %>
    <%= f.label :priority, class: "form-check-label" %>
  </div>

  <div class="form-check mb-3">
    <%= f.check_box :completed, class: "form-check-input" %>
    <%= f.label :completed, class: "form-check-label" %>
  </div>

  <%= f.submit todo.new_record? ? "Create ToDo" : "Update ToDo",
               class: "btn btn-primary" %>
<% end %>

